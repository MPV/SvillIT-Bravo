<h1>Alla gruppmedlemsskap</h1>

<table>
  <tr>
    <th>Grupp</th>
    <th>Person</th>
  </tr>

<% @memberships.each do |membership| %>
  <tr>
    <td><%= link_to membership.group.name, membership.group %></td>
    <td><%= link_to membership.user.login, membership.user %></td>
    <td><%#= link_to 'Visa medlemsskap', membership %></td>
    <td class="icon"><%= link_to image_tag("/images/silk-icons/pencil.png", :border => 0, :alt => '&Auml;ndra'), edit_membership_path(membership) %></td>
    <td class="icon"><%= link_to image_tag("/images/silk-icons/cross.png", :border => 0, :alt => 'Ta bort'), membership, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Nytt medlemsskap', new_membership_path, { :class => 'button add' } %>
